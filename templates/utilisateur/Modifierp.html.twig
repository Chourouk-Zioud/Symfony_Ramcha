{% extends 'base-backmodifutil.html.twig' %}

{% block title %}Modifier Prestateur{% endblock %}

{% block body %}
    <h1 class="text-center" style="color: #0d3057">{{ 'Modifier Prestateur'|trans|raw  }}</h1>


        <div style="width:50%;margin-top: 6rem;margin-left: auto;margin-right: auto;">
            <div class="card border border-primary">
                <div class="card-body  p-5">

                    {{ form_start(form,{'attr' : {'novalidate' : 'novalidate'}} ) }}

                    <div style="color: #0d3057" ><strong>{{ form_label(form.salairep, "Salaire")}} </strong></div>
                    <div><input class="form-control"{{ form_widget(form.salairep) }}</div>
                    <div>{{ form_errors(form.salairep) }}</div>

                    <div style="color: #0d3057" ><strong>{{ form_label(form.postep, "Poste" )}}</strong></div>
                    <div>{{ form_widget(form.postep, { 'attr': {'class': 'form-control mb-2'} }) }}</div>
                    <div>{{ form_errors(form.postep) }}</div>

                    <div style="color: #0d3057" ><strong>{{ form_label(form.diplomep, "Diplome" )}}</strong></div>
                    <div><input class="form-control"{{ form_widget(form.diplomep) }}</div>
                    <div>{{ form_errors(form.diplomep) }}</div>


                    <div style="color: #0d3057" ><strong>{{ form_label(form.experp, "Experience" )}}</strong></div>
                    <div><input class="form-control"{{ form_widget(form.experp) }}</div>
                    <div>{{ form_errors(form.experp) }}</div>

                    <div style="color: #0d3057" ><strong>{{ form_label(form.dispop, "Disponibilite" )}}</strong></div>

                    <div> {{ form_widget(form.dispop, { 'attr': {'class': 'form-control mb-2'} }) }}</div>
                    <div>{{ form_errors(form.dispop) }}</div>

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-inverse-success ">
                        {{ button_label|default('Modifier'|trans|raw) }}</button>
                    </div>

                    {{ form_end(form) }}
                    <br>
                    <br>

                <div class="d-flex justify-content-end">
                <form method="post" action="{{ path('app_utilisateur_deletep', {'iduser': utilisateur.iduser}) }}"
                      onsubmit="return confirm('Etes-vous sÃ»r de supprimer ce prestateur?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete'  ~ utilisateur.iduser) }}">
                    <button  class="btn btn-inverse-secondary btn-fw">
                    {{ 'Supprimer' |trans|raw  }}</button>
                </form>
                </div>
                    <div class="d-flex ">
                        <button class="btn btn-primary btn-rounded btn-icon">
                            <a href="{{ path('app_utilisateur_showp') }}" style="color: white"><i class="ti-back-left btn-icon-prepend"></i></a>
                        </button>

                    </div>

                </div>
        </div>
        </div>


{% endblock %}
