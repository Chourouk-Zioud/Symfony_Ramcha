{% extends 'base-backmodifutil.html.twig' %}

{% block title %}Modifier Demandeur{% endblock %}

{% block body %}
    <h1 class="text-center" style="color: #0d3057" >{{ 'Modifier Demandeur'|trans|raw  }}</h1>

    <div style="width:50%;margin-top: 6rem;margin-left: auto;margin-right: auto;">
        <div class="card border border-primary">
            <div class="card-body  p-5">

                {{ form_start(form,{'attr' : {'novalidate' : 'novalidate'}} ) }}


                <div style="color: #0d3057" class="text-center"><strong>{{ form_label(form.libelledemande, "Libelle demande" )}}</div>
                <div>{{ form_widget(form.libelledemande,{ 'attr': {'class': 'form-control mb-2'} }) }}</div>

                <div>{{ form_errors(form.libelledemande) }}</div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-inverse-success ">
                    {{ button_label|default('Modifier'|trans|raw ) }}</button>
                </div>


                <br>
                <br>
                {{ form_end(form) }}
                <div class="d-flex justify-content-end">
                <form method="post" action="{{ path('app_utilisateur_deleted', {'iduser': utilisateur.iduser}) }}"
                      onsubmit="return confirm('Etes-vous sÃ»r de supprimer ce demandeur ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.iduser) }}">
                    <button class="btn btn-inverse-secondary btn-fw">
                    {{ 'Supprimer'|trans|raw }}</button>
                </form>
                </div>
                <div class="d-flex">
                    <button class="btn btn-primary btn-rounded btn-icon">
                        <a href="{{ path('app_utilisateur_showf') }}" style="color: white"><i class="ti-back-left btn-icon-prepend"></i></a></button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
