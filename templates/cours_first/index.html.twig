{% extends 'base-backcours.html.twig' %}

{% block title %}CoursFirst index{% endblock %}

{% block body %}


<h1 class="text-center" style="color: #0d3057">
   <br> Les Cours</h1>
    <form method="post" >
        <div class="input-group mb-3">
            {# <input type="text" class="form-control" name="search" id="myInput"> #}

        </div>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="t">

        <thead>
            <tr>
                <th style="color: #0d3057">Idfirst</th>
                <th style="color: #0d3057">Nomcours</th>
                <th style="color: #0d3057">Categoriecours</th>
                <th style="color: #0d3057">Sujetcours</th>
                <th style="color: #0d3057">Niveaucours</th>
                <th style="color: #0d3057">Image</th>
                <th style="color: #0d3057">actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for cours_first in cours_firsts %}
            <tr>
                <td>{{ cours_first.idfirst }}</td>
                <td>{{ cours_first.nomcours }}</td>
                <td>{{ cours_first.categoriecours }}</td>
                <td>{{ cours_first.sujetcours }}</td>
                <td>{{ cours_first.niveaucours }}</td>
                <td><img src={{ asset('uploads/images/products/'  ~ cours_first.imageName) }} width="40%"></td>
                <td>
                    <a href="{{ path('app_cours_first_show', {'idfirst': cours_first.idfirst}) }}" style="color:#0d3057"><strong><i class="mdi mdi-book-open"></i> </strong></a>

                    <a href="{{ path('app_cours_first_edit', {'idfirst': cours_first.idfirst}) }}"style="color: #0d3057"><strong><i class="mdi mdi-border-color"></i></strong></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                <div>
                    <div class="text-center">
    <a  href="{{ path('app_cours_first_new') }}" class="btn btn-outline-primary " >{{ button_label|default('Ajouter') }}</a></div>
                </div>
                    <br>
                <br> <div class="d-flex justify-content-center">
        {%  do cours_firsts.setPageRange(2) %}
        {{ knp_pagination_render(cours_firsts,'Pagination.html.twig') }}
    </div>
            </div>
        </div>
        </div>
</div>
{% endblock %}
