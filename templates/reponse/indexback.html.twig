{% extends 'base_back_kais.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table table-striped table-hover" id="t">
        <thead>
            <tr>
                <th>Idreponse</th>
                <th>Text</th>
                <th>Status</th>
                <th>Idreclamation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idreponse }}</td>
                <td>{{ reponse.text }}</td>
                <td>{{ reponse.status }}</td>
                <td>{{ reponse.idreclamation }}</td>
                <td>
                    <a href="{{ path('app_reponse_show_back', {'idreponse': reponse.idreponse}) }}">show</a>
                    <a href="{{ path('app_reponse_edit_back', {'idreponse': reponse.idreponse}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <form method="post" >
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="search" id="myInput">

        </div>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


    <a href="{{ path('app_reponse_new_back') }}">Create new</a>
{% endblock %}
